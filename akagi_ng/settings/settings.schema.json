{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "majsoul_url": {
      "type": "string",
      "description": "The URL for the Majsoul game.",
      "format": "uri"
    },
    "model": {
      "type": "string",
      "description": "The model to use for analyzing the game."
    },
    "ot_server": {
      "type": "object",
      "properties": {
        "server": {
          "type": "string",
          "description": "The server URL for the online service.",
          "format": "uri"
        },
        "online": {
          "type": "boolean",
          "description": "Whether to use the online service."
        },
        "api_key": {
          "type": "string",
          "description": "The API key for the online service."
        }
      },
      "required": [
        "server",
        "online",
        "api_key"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "majsoul_url",
    "model",
    "ot_server"
  ],
  "description": "Settings for the application.",
  "additionalProperties": false
}
